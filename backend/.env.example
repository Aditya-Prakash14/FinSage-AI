# FinSage AI Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration (TiDB Cloud / MySQL)
MYSQL_HOST=gateway01.ap-northeast-1.prod.aws.tidbcloud.com
MYSQL_PORT=4000
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=test

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Security & Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENV=development
DEBUG=true
LOG_LEVEL=info

# CORS Origins (comma-separated, update with your frontend URL for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.vercel.app

# API Rate Limiting (requests per minute)
RATE_LIMIT=60
